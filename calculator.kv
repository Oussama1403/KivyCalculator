<CustButton@Button>:
    font_size: 32
    background_normal: ''
    background_color:[242/255.0, 242/255.0, 242/255.0, 1]
    color: [64/255.0, 64/255.0 ,64/255.0 ,1]
    
<SignButton@Button>:
    font_size: 32
    background_normal: ''
    color: [64/255.0, 64/255.0 ,64/255.0 ,1]
    background_color:[77/255.0, 255/255.0, 77/255.0,1]
        
<CalcGridLayout>:
    id: calculator
    display:entry
    rows:5
    padding:0
    spacing:0

    BoxLayout:
        TextInput:
            id:entry
            font_size:50
            foreground_color:[64/255.0, 64/255.0 ,64/255.0 ,1]
            multiline:True    
    BoxLayout:
        spacing:0
        CustButton:
            text:"7"
            on_press:entry.text += self.text
        CustButton:
            text:"8"
            on_press:entry.text += self.text
        CustButton:
            text:"9"
            on_press:entry.text += self.text
        SignButton:
            text:"+"
            on_press:entry.text += self.text   
    BoxLayout:
        spacing:0
        CustButton:
            text:"4"
            on_press:entry.text += self.text
        CustButton:
            text:"5"
            on_press:entry.text += self.text
        CustButton:
            text:"6"
            on_press:entry.text += self.text
        SignButton:
            text:"-"
            on_press:entry.text += self.text                   

    BoxLayout:
        spacing:0
        CustButton:
            text:"1"
            on_press:entry.text += self.text
        CustButton:
            text:"2"
            on_press:entry.text += self.text
        CustButton:
            text:"3"
            on_press:entry.text += self.text
        SignButton:
            text:"*"
            on_press:entry.text += self.text        

    BoxLayout:
        spacing:0
        CustButton:
            text:"C"
            on_press:entry.text = ""
        CustButton:
            text:"0"
            on_press:entry.text += self.text
        CustButton:
            text:"="
            on_press:calculator.Calculate(entry.text)
        SignButton:
            text:"/"
            on_press:entry.text += self.text            